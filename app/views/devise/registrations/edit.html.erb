<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "名前(姓)" %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "名前(名)" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label "フリガナ(姓)" %>
    <%= f.text_field :last_kana %>
  </div>

  <div class="field">
    <%= f.label "フリガナ(名)" %>
    <%= f.text_field :first_kana %>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :post_code %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :current_password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード確認" %>
    <%= f.password_field :current_password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>


<%= link_to "Back", :back %>
