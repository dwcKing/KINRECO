
<h1>検索結果</h1>
<div class="container-fluid">
    <div class="row">
	<div class="col-md-1"></div>
		<div class="col-md-10">
			<table class=table >
			     <% @search_items.each do |item| %>
					<tr>
						<td>
						    <% item.items_images.each do |image| %>
							 <%= attachment_image_tag image, :image, :fill, 200, 200 %>
							<% end %>
						</td>
						<td>
							<table>
							<tr>
								<td><h4>商品名</h4>
									<h3><%= link_to  item.title ,users_item_path(item.id), data: {"turbolinks" => false}  %></h3>
								</td>
							</tr>
							<tr>
									<td><h4>アーティスト</h4><h3><%= item.artist %></h3></td>
							</tr>
							</table>
						</td>
						<td>
				   			 <table class="table table-striped">
								<tr>
									<td>ジャンル　| <%= item.genre.genre_name %></td>
								</tr>

								<tr>
									<td>レーベル　| <%= item.label.label_name %></td>
								</tr>
								<tr>
								    <td>価格　　　| ¥<%= (item.price * 1.08).floor.to_s(:delimited) %>(税込み)</td>
								</tr>
								<tr>
									<td>販売状況　| <%= item.selling_status %></td>
								</tr>
							</table>
						</td>
					</tr>
				 <% end %>
			</table>
			<div class="paginate_block">
			  <%= paginate @search_items  %>
			</div>
		</div>
	<div class="col-md-1"></div>
	<div class="row">
	</div>
</div>
