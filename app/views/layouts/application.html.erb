<!DOCTYPE html>
<html>
  <head>
    <title>KINReco</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
    <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <h1>サイトロゴ</h1>
    </nav>
    <nav>
    <div id= "slidemenu">
     <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
      <% if end_user_signed_in? %>
        <li class="">
          <%= link_to ' ユーザ名' %>
        </li> 
       
         <li class="">
          <%= link_to "購入履歴"  %>
        </li>

        <li class="">
          <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %>
        </li>
         <li class="">
          <%= link_to "ショッピングカート"  %>
        </li>
      </ul>
      
      <% else %>

        <li class="">
          # <%= link_to ' ユーザ名(ゲスト)'%>
        </li> 

         <li class="">
          <%= link_to '新規会員登録', new_end_user_registration_path %>
        </li>

         <li class="">
          <%= link_to "ログイン", new_end_user_session_path  %>
        </li>
        
         <li class="">
          <%= link_to "ショッピングカート"  %>
        </li>
      <% end %>
      </ul>
     </div>
    </nav>
   </div>
  </div>
  </header> 

    <%= yield %>

    <footer></footer>
  </body>
</html>

   