<div class="container-fluid">
	<div class="row">
				<div class="col-md-offset-3 col-md-6">
				    <table class="table table-striped">
				    	<h1>受注一覧</h1>
								<% @orders.each do |order|%>
								<tr>
								<td>配送ステータス<%= @order_status %></td>
								<td>注文日時<%= order.created_at.strftime("%Y年 %m月 %d日 %H:%M") %></td>
								<td>名前<%= link_to order.last_name ,admins_order_path(order.id)%>
									<%= link_to order.first_name ,admins_order_path(order.id)%></td>
								<td>総計<%= order.delivery_charge %></td>
							    </tr>
								<% end %>
				    </table>
			    </div>
		</div>
</div>


