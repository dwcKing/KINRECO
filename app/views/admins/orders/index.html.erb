<h1>受注一覧</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <table class=table >
        <thead>
          <tr>
            <th>注文日時</th>
            <th>ステータス</th>
            <th>顧客名</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order|%>
          <tr>
              <td><%=order.created_at.strftime("%Y年%-m月%-d日")%></td>
              <td><%= order.order_status %></td>
              <td><%= link_to order.last_name + order.first_name ,admins_order_path(order.id)%>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
