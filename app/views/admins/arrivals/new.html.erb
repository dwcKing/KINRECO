<%= form_for @arrivals, url: admins_item_arrivals_path do |f| %>
  <div class="field">
    <p>入荷日程</p>
    <%= f.date_select :arrivals_date %>
  </div>
    <p>入荷枚数<br></p>
     <%= f.number_field :arrivals_quantity  %>
     <%= f.submit'登録' ,class: 'btn btn-primary btn-block' %>
