<div class="container-fluid">
    <div class="row">
  <div class="col-md-1"></div>
    <div class="col-md-10">
      <table class=table >
           <% @search_items.each do |item| %>
          <tr>
            <td>
                <% item.items_images.each do |image| %>
               <%= attachment_image_tag image, :image, :fill, 200, 200 %>
              <% end %>
            </td>
            <td>
              <table>
              <tr>
                <td>商品名<br>
                  <h3><%= link_to  item.title ,admins_item_path(item.id), data: {"turbolinks" => false}  %></h3>
                </td>
              </tr>
              <tr>
                  <td><h5>アーティスト</h5><%= item.artist %></td>
              </tr>
              </table>
            </td>
            <td>
                 <table class="table table-striped">
                <tr>
                  <td>ジャンル　| <%= item.genre.genre_name %></td>
                </tr>
                <tr>
                  <td>レーベル　| <%= item.label.label_name %></td>
                </tr>
                <tr>
                    <td>価格　　　| ¥<%= item.price.to_s(:delimited) %></td>
                </tr>
                <tr>
                  <td>販売状況　| <%= item.selling_status %></td>
                </tr>
              </table>

         <% end %>
      </table>
      <div class="paginate_block">
        <%= paginate @search_items %>
      </div>
    </div>
  <div class="col-md-1"></div>
  <div class="row">
  </div>
</div>
